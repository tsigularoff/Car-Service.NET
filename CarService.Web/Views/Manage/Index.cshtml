@model CarService.Web.ViewModels.UserInfoViewModel
@{
    ViewBag.Title = "Manage";
}

<p class="text-success">@ViewBag.StatusMessage</p>


<div class="col-lg-4">
    <h2 id="nav-tabs">Hello @User.Identity.Name</h2>
    <div class="bs-component">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#home" data-toggle="tab" aria-expanded="true">User Info</a></li>
            <li class=""><a href="#profile" data-toggle="tab" aria-expanded="false">Account Settings</a></li>                 
        </ul>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade active in" id="home">
                <p>Total added service centers: <strong> @Model.AddedServiceCentersCount</strong></p>
                <p>Total added services : <strong> @Model.AddedServicesCount</strong></p>
            </div>
            <div class="tab-pane fade" id="profile">
                @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-sm" })               
            </div>            
        </div>
        <div id="source-button" class="btn btn-primary btn-xs" style="display: block;">&lt; &gt;</div>
    </div>
</div>